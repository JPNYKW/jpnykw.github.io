{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-extra-semi": 2,
    "space-before-blocks": [
      2,
      {
        "functions": "always"
      }
    ],
    "quotes": [
      2,
      "single"
    ]
  }
}
