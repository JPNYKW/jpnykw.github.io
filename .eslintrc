{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-extra-semi": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 1,
    "curly": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "arrow-body-style": 2,
    "arrow-parens": 2,
    "arrow-spacing": 2,
    "no-var": 2,
    "prefer-const": 2,
    "no-plusplus": 2,
    "object-curly-newline": 2,
    "object-curly-spacing": 2,
    "object-property-newline": 2,
    "space-infix-ops": 2,
    "spaced-comment": 1,
    "quotes": [
      2,
      "single"
    ],
    "space-before-blocks": [
      2,
      {
        "functions": "always"
      }
    ]
  }
}
